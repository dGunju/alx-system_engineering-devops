global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend d-gunju-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/d-gunju.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend d-gunju-tech-backend

backend d-gunju-tech-backend
	balance roundrobin
	server 453-web-01 100.25.164.247:80 check
	server 453-web-02 52.3.248.4:80 check
